pipeline {
    agent any

    tools {
        nodejs 'nodejs' 
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
            
                script {
                    env.PATH = "/opt/sonar-scanner/bin:${env.PATH}"
                }
                withSonarQubeEnv('sonarqube') {
                    sh 'sonar-scanner'
                }
            }
        }
        stage('start the app') {
            steps {
                sh 'npm pack'
            }
        }


    }
}
