pipeline {
    agent {
        docker {
            image 'node:14'
            args '-u root:root'
        }
    }

    stages {
        stage('Cleanup Previous Artifacts') {
            steps {
                sh 'rm -f *.tgz'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Packaging The Artifact') {
            steps {
                sh 'npm pack'
            }
        }
        stage('Artifact Upload') {
            steps {
                sh 'curl -uadmin:AP6APkHxetchhfhHqpaawMctMhu -T \
                *.tgz\ 
                "http://ec2-3-83-18-39.compute-1.amazonaws.com:8081/artifactory/example-repo-local/*.tgz"'
            }
        }
    }
}
