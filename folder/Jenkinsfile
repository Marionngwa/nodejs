pipeline {
    agent any

    tools {
        nodejs 'nodejs' 
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                // Add SonarScanner bin directory to PATH
                script {
                    env.PATH = "/opt/sonar-scanner/bin:${env.PATH}"
                }
                // Run SonarScanner
                withSonarQubeEnv('sonarqube') {
                    sh 'sonar-scanner'
                }
            }
        }
    }
}
