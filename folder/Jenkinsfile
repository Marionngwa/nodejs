pipeline {
    agent {
        docker {
            image 'node:14'
            args '-u root:root'
        }
    }

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Packaging The Artifact') {
            steps {
                sh 'npm pack'
            }
        }
    }
}
