pipeline {
    agent any

    tools {
        nodejs 'nodejs' 
    }

    stages {
        stage('SonarQube Analysis') {
            steps {
                script {
                    sh 'npm install'
                    sh '''
                        /opt/sonar-scanner/bin/sonar-scanner -X \
                        -Dsonar.organization=marionngwa \
                        -Dsonar.projectKey=Marionngwa_nodejs \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=https://sonarcloud.io
                    '''
                }
            }
        }
    }
}
